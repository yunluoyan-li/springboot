<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.petadoption.mapper.FavoriteDao">
    <resultMap id="favoriteResultMap" type="com.example.petadoption.model.Favorite">
        <id property="favoriteId" column="favorite_id"/>
        <result property="userId" column="user_id"/>
        <result property="petId" column="pet_id"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findById" parameterType="long" resultMap="favoriteResultMap">
        SELECT * FROM favorites WHERE favorite_id = #{favoriteId}
    </select>

    <select id="findAll" resultMap="favoriteResultMap">
        SELECT * FROM favorites ORDER BY created_at DESC
    </select>

    <select id="findByUserId" parameterType="long" resultMap="favoriteResultMap">
        SELECT * FROM favorites WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>

    <select id="findByPetId" parameterType="long" resultMap="favoriteResultMap">
        SELECT * FROM favorites WHERE pet_id = #{petId} ORDER BY created_at DESC
    </select>

    <insert id="insert" parameterType="com.example.petadoption.model.Favorite" useGeneratedKeys="true" keyProperty="favoriteId">
        INSERT INTO favorites (user_id, pet_id, created_at)
        VALUES (#{userId}, #{petId}, NOW())
    </insert>

    <update id="update" parameterType="com.example.petadoption.model.Favorite">
        UPDATE favorites
        SET user_id = #{userId}, pet_id = #{petId}
        WHERE favorite_id = #{favoriteId}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM favorites WHERE favorite_id = #{favoriteId}
    </delete>

    <delete id="deleteByUserAndPet">
        DELETE FROM favorites WHERE user_id = #{userId} AND pet_id = #{petId}
    </delete>
</mapper> 